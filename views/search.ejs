<%- include header.ejs -%>

<!-- Nav tabs -->
<ul style="padding-top:25px" class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#home" role="tab" data-toggle="tab">Users <span class="badge"><%= results.length %></a></li>
  <li><a href="#profile" role="tab" data-toggle="tab">Repos <span class="badge"><%= repos.length %></span></a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="home">
  <div class="row">
        <div class="col-lg-12">
            <ul class="list-group">
          		<% results.forEach(function(result){ %>
          			
          			<a href="<%= result["html_url"] %>" class="list-group-item">
          			<img src="<%= result["avatar_url"] %>" class="img-circle lg-head-shot"> <%= result["login"] %>
          			</li>
          			</a>
          		<% }); %>
          	</ul>  
        </div>
    </div>
  </div>
  <div class="tab-pane" id="profile">
   <div class="row">
        <div class="col-lg-12">
            <ul class="list-group">
          		<% repos.forEach(function(repo){ %>
          			<a href="<%= repo["html_url"] %>" class="list-group-item">
          			
        			<img src="<%= repo.owner.avatar_url %>" class="img-circle head-shot">
<b><%= repo["name"] %></b> <small><%= repo["description"] %></small> <span class="pull-right"><label class="label label-default"><%= repo["language"] %></label> <%= repo.stargazers_count %> <i class="fa fa-star"></i></span>
      			</a>
          		<% }); %>
          	</ul>  
        </div>
    </div>
  </div>
</div>


	

   


<%- include footer.ejs -%>